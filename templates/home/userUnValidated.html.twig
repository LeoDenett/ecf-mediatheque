{% extends 'base.html.twig' %}

{% block body %}
    {% block stylesTwig %}
        <style>
            .body{
                margin: 0;
                padding: 10px;
                min-height: calc(100vh - 260px);
            }
            .container{
                background-color: black;
                justify-content: center;
                align-items: center;
                padding: 20px;
                min-height: 680px;
            }
            .subContainer{
                background-color: black;
            }
            .formContainer{
                display: flex;
                background-color: black;
                justify-content: center;
                align-items: center;
            }
            .navbar{
                min-height: 60px;
            }
            .ToggleIcon{
                padding: 5px;
                border-radius: 50%;
                border: solid 1px white;
            }
            .Link-Collapse-Header{
                text-decoration: none;
                font-size: 20px;
                text-align: center;
                color: #7ACBCD;
                margin-top: 15px;
                margin-bottom: 15px;
                font-weight: 500;
                transition: 0.5s;
            }
            .Link-Collapse-Header:hover {
                color: #7ACBCD;
                font-size: 18px;
                transition: 0.5s;
            }
            .Link-Collapse-Header:focus {
                color: #7ACBCD;
            }
            .title{
                color: #7ACBCD;
                display: inline-flex;
                margin: 0;
                padding: 0;
                font-size: 34px;
            }
            a {
                text-decoration: none;
                color: white;
            }
            .LabelForm{
                display: block;
            }
            #registration_form_prenom, #registration_form_nom, #registration_form_adresse_postal, #registration_form_email, #registration_form_plainPassword{
                border-radius: 20px;
                margin-bottom: 10px;
                width: 100%;
            }
            #registration_form_date_naissance_month, #registration_form_date_naissance_day, #registration_form_date_naissance_year {
                border-radius: 20px;
                margin-bottom: 10px;
                margin-right: 10px;
            }
            #registration_form_agreeTerms{
                margin-left: 10px;
            }
            .LogoImage {
                height: 120px;
                width: 120px;
                border-radius: 100%;
                margin-top: 20px;
                margin-bottom: 20px;
                border: solid 2px #7ACBCD;
            }
            .errorMessage{
                color: red;
            }
            .Button-Register{
                margin-top: 20px;
                color: white;
                border: solid 2px #7ACBCD;
                background-color: black;
                padding: 5px;
                border-radius: 15px;
                transition: 0.5s;
            }
            .Button-Register:hover {
                transition: 0.5s;
                margin-left: 10px;
                border: solid 2px white;
                color: black;
                background-color: #7ACBCD;
                border-radius: 25px;
            }
            .ChangeAuth{
                margin-top: 20px;
                color: white;
            }
            .LinkAuth{
                color: #7ACBCD;
                transition: 0.5s;
            }
            .LinkAuth:hover{
                transition: 0.5s;
                color: #7ACBCD;
            }
            @media (min-width: 1024px) and (max-width: 3000px) {
                .container{
                    margin-top: 80px;
                    margin-bottom: 80px;
                }
            }
            @media (min-width: 776px) and (max-width: 1024px) {
                .container{
                    margin-top: 40px;
                    margin-bottom: 40px;
                }
            }
            @media (max-width: 991px) {
                .Link-Collapse{
                    color: white;
                }
            }
            @media (max-width: 600px) {
                .title{
                    font-size: 28px;
                    margin-left: 15px;
                }
                .body{
                    min-height: calc(100vh - 160px);
                }
            }
            @media (max-width: 475px) {
                .title{
                    font-size: 18px;
                }
            }
            @media (max-width: 375px) {
                .title{
                    font-size: 24px;
                    text-align: center;
                    margin-left: 15px;
                }
            }
            @media (max-width: 312px) {
                .title{
                    font-size: 18px;
                }
            }
        </style>
    {% endblock stylesTwig %}
    {% block navHeader %}
        <nav class="navbar navbar-expand-lg Header-Container">
            <div class="container-fluid">
                <img src="{{ asset('build/images/Logo.38d6610a.jpeg') }}" class="Logo" alt="Logo" >
                <h1 class="navbar-brand title">La Chapelle-Curreaux</h1>
                <button class="navbar-toggler Button-Toggle" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars ToggleIcon"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <a class="nav-link Link-Collapse-Header" aria-current="page" href="{{ path('home') }}"><i class="fas fa-arrow-left"></i>     Accueil</a>
                </div>
            </div>
        </nav>
    {% endblock navHeader %}
    <div class="body">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="p-2 text-center ">
                        <h2 class="text-white">Votre compte doit être validé par un de nos employés.</h2>
                        <p class="text-white">Merci de patienter et de revenir d'ici quelques minutes</p>
                        <a href="{{ path('catalogue') }}" class="Button-Ok">Actualiser la page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% block Footer %}
        <div class="Footer">
            <h6>© Chapelle-Curreaux</h6>
        </div>
    {% endblock Footer %}
{% endblock body %}

